// دخول تجريبي فقط للعرض
window.login = function () {
    const email = document.getElementById("email").value.trim();
    const pass  = document.getElementById("password").value.trim();

    if (!email || !pass) {
        alert("أدخلي البريد وكلمة المرور");
        return;
    }

    document.getElementById("loginBox").style.display = "none";
    document.getElementById("filesBox").style.display = "flex";
};

// خروج
window.logout = function () {
    document.getElementById("filesBox").style.display = "none";
    document.getElementById("loginBox").style.display = "flex";
};

// رفع ملف (محلياً فقط)
window.uploadFile = function () {
    const input = document.getElementById("fileInput");
    const file  = input.files[0];

    if (!file) {
        alert("اختاري ملفًا أولاً");
        return;
    }

    const list  = document.getElementById("fileList");
    const li    = document.createElement("li");

    const link = document.createElement("a");
    link.textContent = file.name;
    link.href = URL.createObjectURL(file);
    link.target = "_blank";

    const status = document.createElement("span");
    status.textContent = "جاهز";

    li.appendChild(link);
    li.appendChild(status);
    list.appendChild(li);

    input.value = "";
};
